	public void removeFromCart(String name)throws IOException{
		Product pro= getProductByName(name);
		if(pro!=null) {
			mycart.remove(pro);
		}
		else {
			System.out.println("No such Product");
		}
		
	}
	
	public boolean searchItem(String name) {
		for(Product p: mycart) {
			if(name==p.getProductName()) {
				return true;
			}
		}
		return false;
	}

}
